{
	"extends": [ "tslint-react" ],
	"rules": {
		"align": true,
		"array-type": [ true, "generic" ],
		"arrow-parens": true,
		"binary-expression-operand-order": true,
		"class-name": true,
		"member-ordering": [ true, {
			"order": [
				"public-instance-field",
				"protected-instance-field",
				"private-instance-field",
				"public-constructor",
				"private-instance-method",
				"protected-instance-method",
				"public-instance-method"
			]
		}],
		"no-any": false,
		"no-inferrable-types": true,
		"no-internal-module": true,
		"no-magic-numbers": false,
		"no-namespace": [ true, "allow-declarations" ],
		"await-promise": [ true, "Thenable" ],
		"ban-comma-operator": true,
		"ban": [
			true,
			"eval",
			{ "name": "$", "message": "Please refrain from using jQuery" },
			{ "name": "_", "message": "Please refrain from using lodash" },
			{ "name": "lodash", "message": "Please refrain from using lodash" },
			{ "name": [ "*", "forEach" ], "message": "Please use a regular for loop instead" }
		],
		"curly": true,
		"forin": true,
		"jsx-no-lambda": false,
		"label-position": false,
		"no-arg": true,
		"no-bitwise": true,
		"no-boolean-literal-compare": true,
		"no-consecutive-blank-lines": true,
		"no-trailing-whitespace": true,
		"no-conditional-assignment": true,
		"no-console": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-imports": true,
		"no-duplicate-switch-case": true,
		"no-duplicate-variable": true,
		"no-empty": true,
		"no-eval": true,
		"no-floating-promises": true,
		"no-for-in-array": true,
		"no-implicit-dependencies": true,
		"no-invalid-template-strings": true,
		"no-invalid-this": true,
		"no-misused-new": true,
		"no-null-keyword": false,
		"no-object-literal-type-assertion": true,
		"no-return-await": true,
		"no-shadowed-variable": false,
		"no-sparse-arrays": true,
		"no-string-literal": true,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		"no-this-assignment": true,
		"no-unbound-method": true,
		"no-unsafe-finally": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"prefer-conditional-expression": true,
		"restrict-plus-operands": true,
		"strict-boolean-expressions": false,
		"switch-default": false,
		"triple-equals": true,
		"use-isnan": true,
		"deprecation": true,
		"eofline": true,
		"indent": [ true, "tabs", 4 ],
		"max-classes-per-file": [ true, 1 ],
		"object-literal-sort-keys": true,
		"ordered-imports": [ true, { "import-sources-order": "any", "named-imports-order": "case-insensitive" } ],
		"prefer-const": true,
		"prefer-object-spread": true,
		"prefer-readonly": true,
		"prefer-template": true,
		"space-before-function-paren": [ true, { "anonymous": "always", "named": "never", "asyncArrow": "always" } ],
		"space-within-parens": [ true, 0 ],
		"trailing-comma": [ true, { "multiline": "never", "singleline": "never" } ],
		"interface-name": [ true, "always-prefix" ],
		"interface-over-type-literal": true,
		"newline-before-return": true,
		"object-literal-key-quotes": [ true, "as-needed" ],
		"object-literal-shorthand": true,
		"one-variable-per-declaration": true,
		"quotemark": [ true, "single", "jsx-single", "avoid-escape", "avoid-template" ],
		"semicolon": [ true, "always", "ignore-bound-class-methods" ],
		"variable-name": [ true, "ban-keywords", "allow-leading-underscore" ],
		"jsx-alignment": false,
		"jsx-curly-spacing": [ "always" ],
		"unnecessary-else": [ true, { "allow-else-if": true } ]
	}
}
